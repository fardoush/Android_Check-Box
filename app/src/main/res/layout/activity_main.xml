<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#aefce3"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textId"
        android:text="Select your Frv Actor Khan "
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#1c7005"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="20dp"


        />

    <CheckBox
        android:id="@+id/salmanId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salman Khan"
        android:textSize="20dp" />


    <CheckBox
        android:id="@+id/sarukId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saruk Khan"
        android:textSize="20dp" />


    <CheckBox
        android:id="@+id/amirId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amir  Khan"
        android:textSize="20dp" />
    <CheckBox
        android:id="@+id/saifilyId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SaifilyKhan"
        android:textSize="20dp" />



    <Button
        android:layout_width="match_parent"
        android:id="@+id/selectButton"
        android:text="Select"
        android:textSize="30sp"


        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/resultId"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:hint="Result"
        android:textAlignment="center"

        android:layout_height="wrap_content" />



</LinearLayout>